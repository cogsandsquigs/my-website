    * ----------------------------------------
    * animation fade-in-bottom
    * ---------------------------------------- 
    */

    @keyframes fade-in-bottom {
        0% {
            transform: translateY(50px);
            opacity: 0;
        }
        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }
</style>
